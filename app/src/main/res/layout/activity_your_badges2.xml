<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kristine.badgeapp.YourBadges2">

    <TableRow
        android:id="@+id/tblRowAvailable"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Badges (3-6)"
            android:id="@+id/txtViewMyBadges"
            android:layout_column="1"
            android:layout_gravity="center_horizontal" />
    </TableRow>

    <TableRow
        android:id="@+id/tblRowSocietyBdg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imgSociety2"
            android:background="@drawable/honorsociety"
            android:visibility="invisible"
            android:baselineAlignBottom="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtViewHonorSociety"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textStyle="italic"
            android:text="Honor Society" />

    </TableRow>

    <TableRow
        android:id="@+id/tblRowStudyAbroad"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imgAbroad2"
            android:layout_column="0"
            android:visibility="invisible"
            android:background="@drawable/studyabroad" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Study Abroad"
            android:id="@+id/txtViewStudyAbroad"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textStyle="italic"
            android:layout_column="1" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imgGraduation2"
            android:layout_column="0"
            android:visibility="invisible"
            android:background="@drawable/graduation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dean&apos;s List"
            android:id="@+id/txtViewGraduation"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textStyle="italic"
            android:layout_column="1" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous Badges"
            android:id="@+id/btnPrevious"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/btnBack"
            android:layout_column="6" />
    </TableRow>

</TableLayout>
