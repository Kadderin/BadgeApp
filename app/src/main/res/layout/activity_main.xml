<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/tableLayout">

    <TableRow android:id="@+id/tblRowNav">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnYourBadge"
            android:id="@+id/btnYourBadges" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnAvailableBdg"
            android:id="@+id/btnAvailableBdg" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="15dp"
        android:id="@+id/tblRowUserName">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtViewUserName"
            android:id="@+id/txtViewUserName"
            android:textIsSelectable="true"
            android:textSize="15dp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTxtUserName"
            android:layout_marginLeft="10dp"
            android:layout_span="2" />
    </TableRow>

    <TableRow android:layout_marginTop="15dp"
        android:id="@+id/tblRowPassword">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtViewPassword"
            android:id="@+id/txtViewPassword"
            android:layout_gravity="center_vertical"
            android:textSize="15dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTxtPassword"
            android:layout_marginLeft="10dp"
            android:layout_span="2" />
    </TableRow>

    <TableRow android:id="@+id/tblRowSubmit">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnSubmit"
            android:id="@+id/btnSubmit"
            android:layout_marginTop="30dp"
            android:layout_weight="1" />
    </TableRow>


</TableLayout>
